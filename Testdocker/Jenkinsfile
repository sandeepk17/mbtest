properties([
    parameters([
        [$class: 'ChoiceParameter', 
            choiceType: 'PT_SINGLE_SELECT', 
            description: 'Select the version - DK (c1) or UK(c2)', 
            filterLength: 1, 
            filterable: true, 
            name: 'Package',
